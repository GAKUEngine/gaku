#admin-school-campus-addresses
  = index_header do
    #new-admin-school-campus-address.d-none
    .pull-left
      = count_div '' do
        = t(:'address.singular')
    .pull-right
      = ajax_link_to_new t(:'address.add'), [:new, :admin, @school, @campus, :address], id: 'new-admin-school-campus-address-link', class: @campus.address.nil? ? "btn btn-primary" : 'btn btn-primary d-none'

  = index_body do
    = table_for 'admin-school-campus-addresses-index' do
        thead
          tr
            = th t(:'address.title')
            = th t(:'address.country')
            = th t(:'address.zipcode')
            = th t(:'address.state')
            = th t(:'address.city')
            = th t(:'address.address1')
            = th t(:'address.address2')
            = th_actions 2
        tbody
          = render partial: 'gaku/admin/campuses/addresses/address', locals: {address: @campus.address}
