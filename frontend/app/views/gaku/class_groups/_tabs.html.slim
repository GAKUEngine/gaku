.row
  .col-md-12
    ul.nav.nav-tabs.nav-justified
      li#class_group_students_tab.active
        a#class-group-enrollments-tab-link data-toggle="tab" href="#class_group_enrollments"
          = print_count @class_group.enrollments.count, t(:'student.plural')
      li
        a#class-group-semester-class-groups-tab-link data-toggle="tab" href="#semesters"
          = print_count @class_group.semesters.count, t(:'semester.plural')
      li
        a#class-group-courses-tab-link data-toggle="tab" href="#courses"
          = print_count @class_group.courses.count, t(:'course.plural')
      li
        a#class-group-notes-tab-link data-toggle="tab" href="#notes"
          = print_count @class_group.notes_count, t(:'note.plural')


    .tab-content
      #class_group_enrollments.tab-pane.active
        .row
          #enrollment_form.d-none
        .row#class_group_enrollments_list
          .col-md-12
            = render 'gaku/class_groups/students/students'

      #semesters.tab-pane
        .row
          .col-md-12
            = render 'gaku/class_groups/semester_class_groups/semesters'
        .row
          #semester_form.d-none

      #courses.tab-pane
        .row
          .col-md-12
            = render 'gaku/class_groups/courses/courses'
        .row
          #course_form.d-none

      #notes.tab-pane
        = render 'gaku/notes/notes'