$('#semesters-index tbody').append('<%= render_js_partial("semester", {:semester => @semester}) %>');

$('#new-class-group-semester-link').show();

$('#class-group-semesters-tab-link').html('<%= print_count(@class_group.semesters, t("semesters.semesters")) %>');
$('.semesters-count').html('<%= print_count(@class_group.semesters, t("semesters.list")) %>');

<%- if @semester.errors.any? %>
	$('#new-class-group-semester-form-errors').html('<%= render_js_partial("/shared/errors", {:target => @semester}) %>');
<%- else %>
	$('#new-class-group-semester-form').slideToggle();
	$('#new-class-group-semester-form-errors').slideToggle();
<% end %>