#student_guardians
  .row-fluid
    .pull-left
      h4.h4-vm.guardians_count
        = @student.addresses.count != 0 ? t('guardians.list') + "ï¼ˆ" + @student.guardians.count.to_s + "ï¼‰" : t('guardians.list')
    .pull-right
      =link_to ("<i class='icon-white icon-plus'></i> " + t('guardians.add')).html_safe, new_student_guardian_path(@student), :remote => true, :id => "new_student_guardian_link", :class => "btn btn-primary new_student_guardian", :style => "min-height:0px"
