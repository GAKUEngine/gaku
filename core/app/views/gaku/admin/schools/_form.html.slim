- @school ||= school
= form_for [:admin, @school], :remote => true do |school_form|
  - if school_form.object.new_record?
    b= t('schools.new')
    .row-fluid.mt-l
      .span12.well
        .span12.well
          = render 'school_form_fields', :school_form => school_form
          .row-fluid
            .span12
              .span6 
                = submit_button t('schools.save'), :id => 'submit-admin-school-button'
              = link_to_cancel :id => 'cancel-admin-school-link'

= javascript_include_tag 'gaku/admin/schools'