$('#student-guardian-contacts-index tbody').append('<%= render_js_partial("contact", {:contact => @contact}) %>');
$("#new-student-guardian-contact-link").show();
$('#new-student-guardian-contact form').slideToggle();
$('#new-student-guardian-contact form')[0].reset();
$('#notice').html("<%= escape_javascript(render 'shared/flash', :flash => flash) %>");

<% if @contact.is_primary? %>
	$('.guardian-contact').each(function() {
		$(this).find('.make-primary').removeClass('btn-primary');
	});
	var currentContact = $("#contact-<%= @contact.id %>");
	currentContact.find('.make-primary').addClass('btn-primary');
<% end %>	

$('.student-guardian-contacts-count').html('<%= print_count(@guardian.contacts.count, t("contacts.list")) %>');
