<%- if @semester.valid? %>
  $('tr#semester-<%= @semester.id %>').html('<%= j render("fields", {semester: @semester}) %>');
  $("#edit-school-year-semester-modal").modal("hide");
  showNotice("<%= render_flash %>");
  $('#edit-school-year-semester-modal-error').html('')
<%- else %>
  $('#edit-school-year-semester-modal-error').html('<%= j render("gaku/shared/errors", {target: @semester}) %>')
<% end %>
