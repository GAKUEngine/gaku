$('#add_course_enrollment').html('');
$('.new_student_course').show();

$('#new_student_course_tab_link').html('<%= @student.courses.count != 0 ? t('courses.plural') + "（" + @student.courses.count.to_s + "）" : t('courses.plural') %>');
