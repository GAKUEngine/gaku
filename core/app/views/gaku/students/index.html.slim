= content_for :title, t(:'student.list')

= content_for :index_header do
  .pull-left
    = count_div 'students-count' do
      = print_count @count, t(:'student.list')
  .pull-right
    = ajax_link_to_new t(:'student.new'), new_student_path, :id => "new-student-link"
    = button t(:'student.import'), importer_index_path, :id => "import-students-link"
    = button t(:'student.export'), {:action => :csv, :format => :csv}, :id => 'export-students-link'

= content_for :new_form do
  #new-student.hide

= render 'student_chooser'

= hr

#students-index-div
  = render 'students'

= paginate @students
/= page_entries_info @students
