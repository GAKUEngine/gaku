$('#student-guardian-contacts-index tbody').append('<%= escape_javascript(render :partial => "contact", :formats => [:html], :handlers => [:erb, :slim], :locals => {:contact => @contact}) %>');
$("#new-student-guardian-contact-link").show();
$('#new-student-guardian-contact-form').hide();
$('#new-student-guardian-contact-form form')[0].reset();

<% if @contact.is_primary? %>
	$('.guardian-contact').each(function() {
		$(this).find('.make-primary').removeClass('btn-primary');
	});
	var currentContact = $("#contact-<%= @contact.id %>");
	currentContact.find('.make-primary').addClass('btn-primary');
<% end %>	

$('.student-guardian-contacts-count').html('<%= print_count(@guardian.contacts, t("contacts.list")) %>');
