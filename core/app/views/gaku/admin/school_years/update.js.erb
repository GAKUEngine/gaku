<%- if @school_year.valid? %>
  $('tr#school-year-<%= @school_year.id %>').html('<%= render_js_partial("fields", {:school_year => @school_year}) %>');
  $("#edit-school-year-modal").modal("hide");
  showNotice("<%= render_flash %>");
  $('#edit-school-year-modal-errors').html('')
<%- else %>
    $('#edit-school-year-modal-errors').html('<%= render_js_partial("gaku/shared/errors", {:target => @school_year}) %>')
<% end %>
