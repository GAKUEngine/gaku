<% if @exam.destroyed? %>
  window.location.href = '/exams'
<% else %>
  $('.exam-exam-portions-count').html("<%= print_count(@count, t_exam_portion_list) %>");
  $('[data-id=<%= @exam_portion.id %>]').remove();
  $('#weight-total').text('<%= @exam.total_weight %>');
  showNotice("<%= render_flash %>");
<% end %>
