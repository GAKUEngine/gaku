= form_for [@syllabus, @exam_syllabus], :url => syllabus_exam_syllabuses_path(@syllabus), :remote => true, :method => 'post' do |f|
  .fields  
    b =t('syllabuses.choose_exam')
    =f.label :exam_id
    =f.select :exam_id, @exams.reject {|e| @syllabus.exams.include?(e)}.collect{ |exam| ["#{exam.name}", exam.id]},{:prompt => t('syllabuses.choose_exam')}, {:class => 'chzn-select'}
  .actions
		.row-fluid
			.span12
				.span6
					= submit_button t('syllabuses.add_exam'), :id => 'submit-existing-exam-button'
				= link_to_cancel :id => 'cancel-existing-exam-link'
