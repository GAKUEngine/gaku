$('tr#exam_portion_<%= @exam_portion.id %>').html('<%= render_js_partial("exams/exam_portions/exam_portion", {:exam_portion => @exam_portion}) %>');
$("#edit-exam-portion-modal").modal('hide');
$('input#<%= @exam_portion.id %>.exam-portion-weight').val('<%= @exam_portion.weight %>')
showNotice("<%= render_flash %>");

var sum = 0;
    $('.exam-portion-weight').each(function() {
        sum += Number($(this).val());
    });
$('#weight-total').text(sum);