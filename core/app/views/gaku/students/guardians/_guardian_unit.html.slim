td = guardian.surname
td = guardian.name
td = guardian.birth_date
td = guardian.relationship

- if can_edit?
  td
    = link_to_show [@student, guardian]
    = link_to_edit [:edit, @student, guardian]
    = ajax_link_to_delete [@student, guardian], class: 'btn btn-xs btn-danger delete-student-guardian-link'
- else
  td = link_to_show [@student, guardian]
