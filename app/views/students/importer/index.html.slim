.row-fluid
  .span12.well
    .row-fluid
      .span12
        = link_to ("<i class='icon-white icon-file'></i> " + t("students.registration_csv")).html_safe, :action => :get_csv_template, :class => "btn btn-primary", :id => "get_registration_csv"
        = link_to ("<i class='icon-white icon-file'></i> " + t("students.registration_sheet")).html_safe, :action => :get_sheet_template, :class => "btn btn-primary", :id => "get_registration_csv"
        hr /
        = form_for :import_student_list, :url => { :action => "import_student_list" }, :html => { :multipart => true } do |f|
          label for="import_student_list"
            CSV file
          = f.file_field :file
          br /
          = t "students.import_format"
          = select("importer", "type", @importer_types, {:include_blank => false})
          br /
          = submit_tag 'Submit'
