#student_addresses
  .row-fluid
    .pull-left
      h4.h4-vm
        = @student.addresses.count != 0 ? t('addresses.list') + "ï¼ˆ" + @student.addresses.count.to_s + "ï¼‰" : t('addresses.list')
    .pull-right
      =link_to ("<i class='icon-white icon-plus'></i> " + t('students.add_address')).html_safe, new_address_student_path(@student), :class => 'new_address_student btn btn-primary', :style => "min-height:0px", :remote => true
  .row-fluid
    .span12
      hr
  .row-fluid
    .span12
      table.table.table-striped.table-bordered.table-condensed
        thead
          tr
            th style="width:28px" =t 'addresses.primary'
            th =t 'addresses.title'
            th =t 'addresses.country'
            th =t 'addresses.zipcode'
            th =t 'addresses.state'
            th =t 'addresses.city'
            th =t 'addresses.address1'
            th =t 'addresses.address2'
            th style="width:61px" =t 'manage'
        tbody
          =render :partial => 'students/student_address', :collection => @student.addresses, :as => 'address'

