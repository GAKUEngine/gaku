$('.student-contacts-count').html("<%= print_count(@count+1, t_contact_list) %>");
$('#student-contacts-index tbody').append('<%= render_js_partial("contact", {:contact => @contact}) %>');

$("#new-student-contact-link").show();
$('#new-student-contact').slideToggle();
showNotice("<%= render_flash %>");


<%- if @contact.is_primary %>
  $('#student-contacts-index tbody tr').each(function(){
    $(this).children('td.primary-contact').find('a').removeClass('btn-primary')
  });

  $("#contact-<%= @contact.id %>").children('td.primary-contact')
                                                .find('a')
                                                .addClass('btn-primary')

<% end %>
