.row-fluid
  .span12.well
    .row-fluid
      .span12
        = link_to ("<i class='icon-white icon-file'></i> " + t("students.registration_csv")).html_safe, get_csv_template_importer_index_path, :class => "btn btn-primary", :id => "get_registration_csv" 
        = link_to ("<i class='icon-white icon-file'></i> " + t("students.registration_sheet")).html_safe, :action => :get_sheet_template, :class => "btn btn-primary"
        hr /
        = form_for :importer, :url => { :action => "import_student_list" }, :html => { :multipart => true } do |f|
          label for="importer"
          = f.file_field :data_file
          br /
          = t "import_format"
          = select("importer", "importer_type", @importer_types, {:include_blank => false})
          br /
          = submit_tag 'Submit'
