<div class="alert alert-info">
  <button class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>

<div class="row-fluid">
  <div class="span1"></div>
  <div class="span10">
    <div class="row-fluid">
      <div class="span12">
        <div class="well">
          <table class="table table-striped">
            <tbody>
              <tr>
                <th><%= t :name %></th>
                <td><%= @student.name %></td>
              </tr>
              <tr>
                <th><%= t :email %></th>
                <td><%= @student.email %></td>
              </tr>
              <tr>
                <th><%= t :birth %></th>
                <td><%= @student.birth %></td>
              </tr>
              <tr>
                <th><%= t :admitted %></th>
                <td><%= @student.admitted %></td>
              </tr>
              <tr>
                <th><%= t :graduated %></th>
                <td><%= @student.graduated %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="well">
          <div class="tabbable tabs-right">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#profile" data-toggle="tab"><%= t "profile" %></a></li>
              <li class=""><a href="#guardian" data-toggle="tab"><%= t "guardian.guardian" %></a></li>
              <li class=""><a href="#note" data-toggle="tab"><%= t "note.notes" %></a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="profile">
                <table class="table table-striped">
                  <tbody>
                    <tr>
                      <th><%= t :birth %></th>
                      <td><%= @student.birth %></td>
                    </tr>
                    <tr>
                      <th><%= t :gender %></th>
                      <td><%= @student.gender %></td>
                    </tr>

                    <tr>
                      <th><%= t :prefecture %></th>
                      <td><%= @student.birth %></td>
                    </tr>

                    <tr>
                      <th><%= t :phone %></th>
                      <td><%= @student.phone %></td>
                    </tr>
                    <tr>
                      <th><%= t :email %></th>
                      <td><%= @student.email %></td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <% if @student.guardians.any? %>
                <div class="tab-pane" id="guardian">
                  <div class="tabbable">
                    <ul class="nav nav-tabs">
                      <li class="active"><a href="#guardian1" data-toggle="tab"><%= t "guardian.guardian" %>1</a></li>
                      <li class=""><a href="#guardian2" data-toggle="tab"><%= t "guardian.guardian" %>2</a></li>
                    </ul>
                    <div class="tab-content">

                      <div class="tab-pane active" id="guardian1">
                        <table class="table table-striped">
                          <tbody>
                            <tr>
                              <th><%= t :name %></th>
                              <td><%= @student.guardians.first.name %></td>
                            </tr>
                            <tr>
                              <th><%= t :birth %></th>
                              <td><%= @student.guardians.first.birth %></td>
                            </tr>
                            <tr>
                              <th><%= t :gender %></th>
                              <td><%= @student.guardians.first.gender %></td>
                            </tr>
                            <tr>
                              <th><%= t :zipcode %></th>
                              <td><%= @student.guardians.first.zipcode %></td>
                            </tr>
                            <tr>
                              <th><%= t :prefecture %></th>
                              <td><%= @student.guardians.first.birth %></td>
                            </tr>
                            <tr>
                              <th><%= t :address %></th>
                              <td><%= @student.guardians.first.address %></td>
                            </tr>
                            <tr>
                              <th><%= t :phone %></th>
                              <td><%= @student.guardians.first.phone %></td>
                            </tr>
                            <tr>
                              <th><%= t :email %></th>
                              <td><%= @student.guardians.first.email %></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>

                      <% unless @student.guardians.second.nil? %> 
                        <div class="tab-pane" id="guardian2">
                          <table class="table table-striped">
                            <tbody>
                              <tr>
                                <th><%= t :name %></th>
                                <td><%= @student.guardians.second.name %></td>
                              </tr>
                              <tr>
                                <th><%= t :birth %></th>
                                <td><%= @student.guardians.second.birth %></td>
                              </tr>
                              <tr>
                                <th><%= t :gender %></th>
                                <td><%= @student.guardians.second.gender %></td>
                              </tr>
                              <tr>
                                <th><%= t :zipcode %></th>
                                <td><%= @student.guardians.second.zipcode %></td>
                              </tr>
                              <tr>
                                <th><%= t :prefecture %></th>
                                <td><%= @student.guardians.second.birth %></td>
                              </tr>
                              <tr>
                                <th><%= t :address %></th>
                                <td><%= @student.guardians.second.address %></td>
                              </tr>
                              <tr>
                                <th><%= t :phone %></th>
                                <td><%= @student.guardians.second.phone %></td>
                              </tr>
                              <tr>
                                <th><%= t :email %></th>
                                <td><%= @student.guardians.second.email %></td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                      <% end %>

                    </div>
                  </div>
                  <hr />
                  <div class="row-fluid">
                    <button class="span12 btn btn-primary"><%= t "guardian.add" %></button>
                  </div>
                </div>
              <% end %>

              <% if @student.notes.any? %>
                <div class="tab-pane" id="note">
                  <div class="tabbable">
                    <ul class="nav nav-tabs">
                      <li class="active"><a href="#note1" data-toggle="tab"><%= t "note.notes" %>1</a></li>
                      <li class=""><a href="#note2" data-toggle="tab"><%= t "note.notes" %>2</a></li>
                    </ul>
                    <div class="tab-content">
                      <div class="tab-pane active" id="note1">
                        <div class="row-fluid">
                          <div class="span12">
                            <%= @student.notes.first.title %>
                          </div>
                        </div>
                        <hr />
                        <div class="row-fluid">
                          <div class="span12">
                            <%= @student.notes.first.content %>
                          </div>
                        </div>
                      </div>

                      <% unless @student.notes.second.nil? %>       
                        <div class="tab-pane active" id="note2">
                          <div class="row-fluid">
                            <div class="span12"><%= @student.notes.second.title %></div>
                          </div>
                          <hr />
                          <div class="row-fluid">
                            <div class="span12">
                              <%= @student.notes.second.content %>
                            </div>
                          </div>
                        </div>
                      <% end %>

                    </div>
                  </div>
                  <hr />
                  <div class="row-fluid">
                    <button class="span12 btn btn-primary"><%= t "note.add" %></button>
                  </div>
                </div>
              </div>
            <% end %>
              
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <%= link_to t(:Edit), edit_student_path(@student) %> |
  <%= link_to t(:Back), students_path %>
</div>
