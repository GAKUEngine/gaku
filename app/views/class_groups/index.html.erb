<h1><%= t "class_groups.list"%></h1>

<table>
  <tr>
    <th><%= t "class_groups.name"%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @class_groups.each do |class_group| %>
  <tr>
    <td><%= class_group.name %></td>
    <td><%= link_to t(:Show), class_group %></td>
    <td><%= link_to t(:Edit), edit_class_group_path(class_group) %></td>
    <td><%= link_to t(:Destroy), class_group, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

