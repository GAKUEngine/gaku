showNotice("<%= render_flash %>");

<%- unless @course.errors.any? %>
  $('#course-modal').modal('hide');
  $('#course-modal').remove();


  var rowHtml = '<%= render_js_partial("course_unit", { course: @course }) %>';
  $('.course-<%= @course.id %>').each(function(){
    $(this).html(rowHtml);
  });


  //update from show pagee
  $("#course-table tbody tr").html('<%= render_js_partial("gaku/shared/fields/course_show_fields", {:course => @course}) %>');
<% end %>