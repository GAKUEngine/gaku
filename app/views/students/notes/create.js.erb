$('#new-student-note-form form').each(function() {
	this.reset();
});
$('.student-notes-count').html('<%= @student.notes.count %>');

$('#new-student-note-form').html('');
$('#new-student-note-link').show();

$('.student-notes-count').html('<%= @student.notes.count != 0 ? t('notes.list') + "(" + @student.notes.count.to_s + ")" : t('notes.list') %>');
