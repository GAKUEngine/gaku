<%- if @exam_syllabus.errors.any? %>
	$('#add-existing-exam-form-errors').html('<%= render_js_partial("/shared/errors", {:target => @exam_syllabus}) %>');
<%- else %>
	$('#add-existing-exam-form').html('<%= render_js_partial("syllabuses/exams/select_form", {:syllabus => @syllabus}) %>');
	$('#add-existing-exam-form').hide();

  $('#syllabus-exams-index tbody').append('<%= render_js_partial("syllabuses/exams/exam", {:exam_syllabus => @syllabus.exam_syllabuses.last}) %>');
  $('.flash-error').html("<%= escape_javascript(render 'shared/flash', :notice => flash[:notice]) %>");
<% end %>