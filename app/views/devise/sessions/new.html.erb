<h2><%= t "devise.sessions.sign_in" %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div id="password-credentials">
  	<p>
  	  <%= f.label t "devise.email" %><br />
      <%= f.email_field :email %>
    </p>

    <p>
  	  <%= f.label t "devise.password" %><br />
      <%= f.password_field :password %>
    </p>

    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label t "devise.sessions.remember_me" %></p>
    <% end -%>

    <p><%= f.submit t("devise.sessions.sign_in"), :id => 'sign_in' %></p>
    
  </div>
<% end %>

<%= render "links" %>