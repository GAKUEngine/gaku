<p id="notice"><%= notice %></p>

<p>
  <b><%= t 'courses.code' %>:</b>
  <%= @course.code %>
</p>

<p>
  <b><%= t 'combined_code' %>:</b>
  <%= if @syllabus.code != "" then @syllabus.code + "-" end -%><%= if @course.code != "" then @course.code + "-" end -%>
</p>

<p>
  <b><%= t :syllabus %>:</b>
  <%= Syllabus::find(@course.syllabus_id).name %>
</p>

<div id="course_enrollments">
</div>
<%= link_to_function t("add_student") do |page|
  page.insert_html :bottom, :class_enrollments, :partial => "course_enrollments/new_course_enrollment", :object => CourseEnrollment.new
end %>

<%= link_to t(:Edit), edit_course_path(@course) %> |
<%= link_to t(:Back), courses_path %>
