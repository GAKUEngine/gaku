= form_for [@student, @guardian, Address.new], :html => { :id => 'new_guardian_address' }, :remote => true do |address_form|
  = render 'students/shared/address_fields', :address_form => address_form 
  
= javascript_include_tag 'students/addresses/form'
  
coffee:
  $('#new_guardian_address_form').on 'click','#cancel_link', (e)->
    e.preventDefault()
    $('#add_student_guardian_address_link').show()
    $('#new_guardian_address_form').hide()  
  
  $('#new_guardian_address').validationEngine()
