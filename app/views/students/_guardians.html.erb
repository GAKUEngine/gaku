<% if @student.guardians.any? %>
  <div class="tab-pane" id="guardian">
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#guardian1" data-toggle="tab"><%= t "guardian.guardian" %>1</a></li>
        <li class=""><a href="#guardian2" data-toggle="tab"><%= t "guardian.guardian" %>2</a></li>
      </ul>
      <div class="tab-content">

        <div class="tab-pane active" id="guardian1">
          <table class="table table-striped">
            <tbody>
              <tr>
                <th><%= t :name %></th>
                <td><%= @student.guardians.first.name %></td>
              </tr>
              <tr>
                <th><%= t :birth %></th>
                <td><%= @student.guardians.first.birth %></td>
              </tr>
              <tr>
                <th><%= t :gender %></th>
