$("#course-students-index tbody").html('');

<% @resource.enrollments.each do |enrollment| %>
  $('#course-students-index tbody').append('<%= j render("gaku/courses/enrollments/enrolled", {enrollment: enrollment.student}) %>');
<% end %>

$('#new-course-enrollment-tab-link').html("<%= print_count(@resource.students.count, t(:'student.plural')) %>");
$('.course-students-count').html("<%= print_count(@resource.students.count, t(:'student.list')) %>");

$('#student-modal').modal('hide');
showNotice("<%= render_flash %>");
