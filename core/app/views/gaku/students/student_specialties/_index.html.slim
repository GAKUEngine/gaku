= index_header do
    #new-student-specialty.hide
    .pull-left
      = count_div 'student-specialty-count' do
        = print_count @student_specialties.count, t(:'address.list')
    .pull-right
      = ajax_link_to_new 'Add Student Specialty', nil, :id => 'new-student-specialty-link'

=hr

= table_for 'index-student-specialties' do
  thead
    tr
      =th t(:'specialty.singular')
      =th t(:'specialty.major')
      =th_actions 2
  tbody
    =render :partial =>'student_specialty', :collection => @student_specialties, :as => :student_specialty