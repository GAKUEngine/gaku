showNotice("<%= render_flash %>");

$('#<%= @polymorphic_resource_name.pluralize %>-index tbody').append('<%= j render("contact", {contact: @contact}) %>');
$("#new-<%= @polymorphic_resource_name %>-link").show();
$('#new-<%= @polymorphic_resource_name %>').slide();

$('.<%= @polymorphic_resource_name.pluralize %>-count').html("<%= print_count(@count, t_contact_list) %>");
$('#<%= @polymorphic_resource_name.pluralize %>-tab-link').html("<%= print_count(@count, t_contact_plural) %>");

<% if @contact.primary? %>
  $('#<%= @polymorphic_resource_name.pluralize %>-index tbody tr').each(function(){
    $(this).children('td.primary-contact').find('a').removeClass('btn-primary')
  });
  $("#contact-<%= @contact.id %>").children('td.primary-contact')
                                                .find('a')
                                                .addClass('btn-primary')


  $('#primary-contact').html("<%= @contact.contact_type.name + ':' + @contact.data + '(' + @contact.details + ')' %>");
<% end %>

