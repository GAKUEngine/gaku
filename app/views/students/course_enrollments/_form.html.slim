=form_for [@student, @course_enrollment], :remote => true do |course_enrollment_form|
  .row-fluid.control-group
    .span12
       b= t('courses.new')
  .row-fluid
    = course_enrollment_form.hidden_field :student_id, :value => @student.id

  = render 'shared/form_fields/course_enrollment_form_fields', :course_enrollment_form => course_enrollment_form
  
  .row-fluid style="margin-top:10px"
    .span8
		  = course_enrollment_form.submit t('course_enrollments.create'), :id => 'submit-student-course-enrollment-button', :class => "span12 btn btn-primary", :style => "min-height:0px; float: left;"
    = link_to_cancel :id => "cancel-student-course-enrollment-link", :class => "span4 btn btn-danger"

coffee:
  $("#cancel-student-course-enrollment-link").click ->
    $("#new-student-course-enrollment-link").show()
    $("#new-student-course-enrollment-form").html("")

  $('#new-student-course-enrollment-form form').validationEngine()