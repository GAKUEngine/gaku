$('#student-notes-table tbody').append('<%= escape_javascript(render :partial => "students/notes/show", :formats => [:html], :handlers => [:erb, :slim], :locals => {:note => @student.notes.last}) %>');
$('#add_note_form_area form').each(function() {
	this.reset();
});
$('.notes_count').html('<%= @student.notes.count %>');

$('#add_new_student_note').html('');
$('#new_student_note_link').show();

$('#new_student_note_tab_link').html('<%= @student.notes.count != 0 ? t('notes.notes') + "（" + @student.notes.count.to_s + "）" : t('notes.notes') %>');
$('.notes_count').html('<%= @student.notes.count != 0 ? t('notes.list') + "（" + @student.notes.count.to_s + "）" : t('notes.list') %>');
