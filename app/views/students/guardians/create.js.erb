$('.guardians_list').append('<%= escape_javascript(render :partial => "guardian", :formats => [:html], :handlers => [:erb, :slim], :locals => {:guardian => @student.guardians.last}) %>');
$('.student-guardians-count').html('<%= @student.guardians.count%>');
$('#new-student-guardian-form').html('');
