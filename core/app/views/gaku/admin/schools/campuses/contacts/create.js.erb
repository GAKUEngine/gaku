
$('.admin-school-campus-contacts-count').html('<%= print_count(@count+1, t_contact_list) %>');
$('#admin-school-campus-contacts-index tbody').append('<%= render_js_partial("contact", {:contact => @contact, :school => @school, :campus => @campus}) %>');

$("#new-admin-school-campus-contact-link").show();
$('#new-admin-school-campus-contact').slideToggle();

showNotice("<%= render_flash %>")

<%- if @contact.is_primary? %>
	$('#admin-school-campus-contacts-index tbody tr').each(function(){
    $(this).children('td.primary-contact').find('a').removeClass('btn-primary')
  });

  $("#contact-<%= @contact.id %>").children('td.primary-contact')
                                                .find('a')
                                                .addClass('btn-primary')
<% end %>
