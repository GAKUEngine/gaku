<%- if @course_group.errors.any? %>
	$('#course-group-form-errors').html('<%= escape_javascript(render :partial => "/shared/errors", :formats => [:html], :handlers => [:erb, :slim], :locals => {:target => @course_group} ) %>');
<% else %>
	$('#course-groups-index').html('<%= escape_javascript(render :partial => "/course_groups/course_groups", :formats => [:html], :handlers => [:erb, :slim], :locals => {:course_groups => @course_groups}) %>');
	$('.flash-error').html("<%= escape_javascript(render 'shared/flash', :notice => flash[:notice]) %>");
<% end %>

$('#new-course-group-form form')[0].reset();
