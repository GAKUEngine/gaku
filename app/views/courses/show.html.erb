<p id="notice"><%= notice %></p>

<p>
  <b><%= t 'courses.code' %>:</b>
  <%= @course.code %>
</p>

<p>
  <b><%= t 'combined_code' %>:</b>
  <%= if @syllabus.code != "" then @syllabus.code + "-" end -%><%= if @course.code != "" then @course.code + "-" end -%>
</p>

<p>
  <b><%= t :syllabus %>:</b>
  <%= Syllabus::find(@course.syllabus_id).name %>
</p>

<div id="course_enrollments">
  <p id="enrolled_students_count">
    <b><%= t :num_enrolled %>:</b>
    <%= @course_enrollments.count %>
  </p>
  <p id="enrolled_students_list">
    <b><%= t "course_enrollments.list" %>:</b>
    <ul>
      <% @course_enrollments.each do |enrollment| %>
        <li><%= enrollment.student.name %></li>
      <% end %>
    </ul>
  </p>
  <div id="add_student_enrollment">
  </div>
</div>


<%= link_to_enroll_student t('add_student'), @course.id, "add_student_enrollment" %> | 
<%= link_to t(:Edit), edit_course_path(@course) %> |
<%= link_to t(:Back), courses_path %>
