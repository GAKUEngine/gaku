<%- if @course_group.errors.any? %>
	$('#course-group-form-errors').html('<%= render_js_partial("shared/errors", {:target => @course_group}) %>');
<% else %>
	$('#course-groups-index').html('<%= render_js_partial("course_groups", {:course_groups => @course_groups}) %>');
  $('#course-group-form-errors').html('');
	$('.flash-error').html("<%= escape_javascript(render 'shared/flash', :notice => flash[:notice]) %>");
<% end %>

$('#new-course-group form')[0].reset();