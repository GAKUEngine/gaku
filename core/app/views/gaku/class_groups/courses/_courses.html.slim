.row-fluid
  #new-class-group-course.hide
    = render 'gaku/class_groups/courses/form'
  .pull-left
    h4.h4-vm.class-group-courses-count 
      =print_count(@class_group.class_group_course_enrollments.count, t('course.list'))
  .pull-right
    = ajax_link_to_new t('course.add'), new_class_group_class_group_course_enrollment_path(:class_group_id => @class_group.id), :id => 'new-class-group-course-link'

.row-fluid
  .span12
    hr
.row-fluid
  .span12
    table#class-group-courses-index.index.table.table-striped.table-bordered.table-condensed 
      thead
        tr
          th.btn-inverse = t('course.code')
          th.btn-info style="width:61px" =t 'manage'
      tbody
        =render :partial => 'gaku/class_groups/courses/course', :collection => @class_group.class_group_course_enrollments, :as => 'enrollment'