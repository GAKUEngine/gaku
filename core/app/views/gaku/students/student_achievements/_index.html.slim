= index_header do
    #new-student-achievement.d-none
    .pull-left
      = count_div 'student-achievements-count' do
        = print_count @count, t(:'achievement.list')
    .pull-right
      = ajax_link_to_new t(:'achievement.add'), [:new, @student, :student_achievement], id: 'new-student-achievement-link'

hr

= table_for 'student-achievements-index' do
  thead
    tr
      = th t(:'achievement.name')
      = th t(:'achievement.description')
      = th t(:'achievement.authority')
      = th t(:'achievement.badge')
      = th_actions 2
  tbody
    = render partial: 'student_achievement', collection: @student_achievements, as: :student_achievement