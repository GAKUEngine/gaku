$('#new-student-contact-tab-link').html('<%= @student.contacts.count != 0 ? t('contacts.contacts') + "（" + @student.contacts.count.to_s + "）" : t('contacts.contacts') %>');
$('.student-contacts-count').html('<%= @student.contacts.count != 0 ? t('contacts.list') + "（" + @student.contacts.count.to_s + "）" : t('contacts.list') %>');

<%- unless @student.contacts.blank? %>
	$('.student-contact-table').find('#contact_<%= @student.contacts.first.id %> .make_primary').addClass('btn-primary')
<% end %>
