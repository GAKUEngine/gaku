.panel.panel-success
  .panel-heading
    = t(:'student.search')
    span.hide-advanced-search-table.d-none = modal_close_button
  .panel-body
    = search_form_for @search, url: search_students_path, html: {id: 'search-students'} do |f|
      .row
        .col-md-12
          ul.nav.nav-tabs.nav-justified
            li.active
              a#student-search-tab data-toggle="tab" href="#student"
                = t(:'student.singular')
            li
              a#student-academic-search-tab data-toggle="tab" href="#academic"
                = t(:'student.academic')
            li
              a#student-address-search-tab data-toggle="tab" href="#address"
                = t(:'address.singular')
            li
              a#student-extended-search-tab data-toggle="tab" href="#extended"
                = t(:'extended')
          .tab-content
            #student.tab-pane.active
              = render partial: 'gaku/students/search/student', locals: {f: f}
            #academic.tab-pane
              = render partial: 'gaku/students/search/academic', locals: {f: f}
            #address.tab-pane
              = render partial: 'gaku/students/search/address', locals: {f: f}
            #extended.tab-pane
              = render partial: 'gaku/students/search/extended', locals: {f: f}
      = hidden_field_tag "autocomplete_field"

      = hidden_field_tag "enrolled_students", @enrolled_students
      #selected-students.d-none
