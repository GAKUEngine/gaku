$('#student-course-enrollments-index tbody').append('<%= escape_javascript(render :partial => "course_enrollment", :formats => [:html], :handlers => [:erb, :slim], :locals => {:course => @student.courses.last}) %>');
inner_text = $('.courses_count').text();
var new_value = parseInt(inner_text) + 1;
$('.student-courses-count').html(new_value); 
$('#new-student-course-enrollment-form select').val('');
$('#new-student-course-enrollment-form').html('');
$('#new-student-course-enrollment-link').show();

$('#new-student-course-enrollment-tab-link').html('<%= @student.courses.count != 0 ? t('courses.plural') + "(" + @student.courses.count.to_s + ")" : t('courses.plural') %>');
$('.student-course-enrollments-count').html('<%= @student.courses.count != 0 ? t('courses.list') + "(" + @student.courses.count.to_s + ")" : t('courses.list') %>');