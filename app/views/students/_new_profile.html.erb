<div class="tab-pane active" id="profile">
  <div class="row-fluid">
    <div class="span6 control-group">
      <%= f.label :birth, t("birth"), :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :birth, :class => "span12" %>
      </div>
    </div>
    <div class="span6 control-group">
      <%= label_tag :gender, t("gender"), :class => "control-label" %>
      <div class="controls">
        <%= select_tag :gender, options_for_select([[t("male"), "male"], [t("female"), "female"]]), :class => "span12" %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6 control-group">
      <%= label_tag :zipcode, t("zipcode"), :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag :zipcode, nil, :class => "span12" %>
      </div>
    </div>
    <div class="span6 control-group">
      <%= label_tag :prefecture, t("prefecture"), :class => "control-label" %>
      <div class="controls">
        <%= select_tag :prefecture, options_for_select([["Pref1", "pref1"], ["Pref2", "pref2"]]), :class => "span12" %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12 control-group">
      <%= label_tag :address, t("address"), :class => "control-label" %>
      <div class="controls">
        <%= text_area_tag :address, nil, :class => "span12" %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6 control-group">
      <%= f.label :phone, t("phone"), :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :phone, :class => "span12" %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6 control-group">
      <%= f.label :email, t("email"), :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :email, :class => "span12" %>
      </div>
    </div>
  </div>
</div>