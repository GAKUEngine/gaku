$("#students-index-div").html("<%= j render('students') %>");
$('.students-count').html("<%= print_count(@students_count, t(:'student.list')) %>");

var students_per_page = 10;
var pagination = $('.pagination');

<% if !params[:page].present? %>
  if('<%= @students.count %>' < students_per_page) {
    pagination.hide();
  } else {
    pagination.show();
  }
<% end %>
