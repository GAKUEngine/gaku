<%- if @semester.valid? %>
  $('tr#semester-<%= @semester.id %>').html('<%= render_js_partial("fields", {:semester => @semester}) %>');
  $("#edit-school-year-semester-modal").modal("hide");
  showNotice("<%= render_flash %>");
  $('#edit-school-year-semester-modal-error').html('')
<%- else %>
  $('#edit-school-year-semester-modal-error').html('<%= render_js_partial("gaku/shared/errors", {:target => @semester}) %>')
<% end %>
