$('#student-guardian-addresses-index tbody').append('<%= escape_javascript(render :partial => "address", :formats => [:html], :handlers => [:erb, :slim], :locals => {:address => @address}) %>');

$('#new-student-guardian-address-form').hide();
$('#new-student-guardian-address-form form')[0].reset();
$('#new-student-guardian-address-link').show();

$('.student-guardian-addresses-count').html('<%= @guardian.addresses.count != 0 ? t('addresses.list') + "(" + @guardian.addresses.count.to_s + ")" : t('addresses.list')%>');
