tr id="contact-#{contact.id}" class="guardian-contact"
  - @target = [@student, @guardian, contact]
  = render 'shared/fields/contact_fields', :target => @target 
  td class="primary-button"
    -if @target.last.is_primary?
      =link_to t('contacts.make_primary'), [:make_primary] + @target, :data => {:confirm => 'are you sure?'}, :class => 'btn btn-primary make-primary', :remote => true, :method => :post
    -else
      = link_to t('contacts.make_primary'), [:make_primary] + @target, :id => 'set-primary-link', :data => {:confirm => 'are you sure?'}, :class => 'btn', :remote => true, :method => :post

    = ajax_link_to_edit [:edit] + @target, :id => 'edit-student-guardian-contact-link', :class => "mr-xs btn btn-mini btn-warning"
    = ajax_link_to_delete @target, :id => 'delete-student-guardian-contact-link', :class => 'btn btn-mini btn-danger'