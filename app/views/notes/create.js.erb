$('#<%= notable_resource %>-notes-index tbody').append('<%= render_js_partial("note", {:note => @notable.notes.last}) %>');
$('#new-note form').each(function() {
	this.reset();
});

$('#new-note').slideToggle();
$('#new-note-link').show();

$('#new-<%= notable_resource %>-note-tab-link').html('<%= print_count(@notable.notes.count, t('notes.notes')) %>');
$('.<%= notable_resource %>-notes-count').html('<%= print_count(@notable.notes.count, t('notes.list')) %>');
