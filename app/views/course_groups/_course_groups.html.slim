table.index.table.table-striped.table-bordered.table-condensed
	thead
		tr
			th =t('name')
			th =t('manage')
	tbody
		- course_groups.each do |course_group|				
			tr
				td =course_group.name
				td
					=link_to t('Show'), course_group, :class => 'btn btn-primary'
					=link_to t('Edit'), [:edit, course_group], :remote => true, :class => 'btn btn-warning'
					=link_to t('Delete'), course_group, :method => :delete, :remote => true, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-danger course_group_delete_link'
